<div class="p-4" id="nav">
</div>

<div class="row p-3 d-flex justify-content-around" id="form-acortar">
  <div class="col-md-6 align-self-center">
    <%= simple_form_for @link do |f| %>
      <%= f.text_field :url %>
      <%= f.submit "Acortar", class: "button btn p-2 px-3" %>
    <% end %>
  </div>
</div>

<div class="container" id="lista">
  <div class="row my-3">
    <div class="col-md-6 m-auto">
      <% @links.each do |link| %>
        <div class="border border-muted rounded mt-3">
          <div>
            <div class="d-flex justify-content-between align-items-center p-2">
              <div>
                <p><%= "â€‹http://localhost:3000/links/#{link.short_url}" %></p>
                <p class="text-muted">Accedido <%= link.clicked %> veces</p>
              </div>
              <div>
                <i class="far fa-copy"></i>
                <%= link_to link_path(link), method: :delete, data: { confirm: "Are you sure?"} do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
            </div>
            <div id="url-original"  class="p-2 d-flex align-items-center">
              <p class="font-weight-bold">URL Original: <%= link.url %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>